name: mailcraftsystem
description: "Enterprise-grade Flutter email client with feature-first DDD architecture, enough_mail integration, REST auth with OTP, and Gmail-like UI"
publish_to: "none"

version: 0.1.0+1

environment:
  sdk: ">=3.5.0 <4.0.0"

dependencies:
  flutter:
    sdk: flutter
  
  # Core dependencies (alphabetically sorted)
  collection: ^1.18.0
  crypto: ^3.0.3
  device_info_plus: ^9.1.0
  dio: ^5.4.0
  drift: ^2.18.0
  encrypt: ^5.0.1
  enough_mail: ^2.1.6
  flutter_dotenv: ^5.1.0
  flutter_riverpod: ^2.5.1
  flutter_secure_storage: ^9.2.2
  freezed_annotation: ^2.4.4
  go_router: ^14.2.0
  hooks_riverpod: ^2.5.1
  hugeicons: ^1.0.2
  intl: ^0.19.0
  json_annotation: ^4.9.0
  logger: ^2.0.2+1
  package_info_plus: ^4.2.0
  path: ^1.8.3
  riverpod_annotation: ^2.3.5
  sqlite3_flutter_libs: ^0.5.24
  webview_flutter: ^4.7.0

dev_dependencies:
  flutter_test:
    sdk: flutter
  
  # Dev dependencies (alphabetically sorted)
  build_runner: ^2.4.11
  drift_dev: ^2.18.0
  freezed: ^2.5.7
  golden_toolkit: ^0.15.0
  json_serializable: ^6.9.0
  mocktail: ^1.0.4
  riverpod_generator: ^2.4.0
  very_good_analysis: ^6.0.0

flutter:
  uses-material-design: true
  
  assets:
    - assets/
    - .env

flutter_intl:
  enabled: true
